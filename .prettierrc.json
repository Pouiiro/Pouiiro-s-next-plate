{
    "plugins": [
        "prettier-plugin-tailwindcss",
        "@trivago/prettier-plugin-sort-imports"
    ],
    "tailwindFunctions": ["clsx", "tw"],
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "semi": false,
    "tabWidth": 4,
    "printWidth": 80,
    "jsxSingleQuote": true,
    "bracketSpacing": true,
    "bracketSameLine": false,
    "importOrder": ["^@*/(.*)$", "^[./]"],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
